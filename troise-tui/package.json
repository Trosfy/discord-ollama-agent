{
  "name": "troise-tui",
  "version": "0.1.0",
  "description": "Terminal UI for TROISE AI - Personal AI Augmentation System",
  "type": "module",
  "main": "src/index.tsx",
  "bin": {
    "troise": "./dist/troise"
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "dev:watch": "bun --watch src/index.tsx",
    "build": "bun build src/index.tsx --compile --minify --outfile=dist/troise",
    "build:linux-x64": "bun build src/index.tsx --compile --target=bun-linux-x64 --minify --outfile=dist/troise-linux-x64",
    "build:linux-arm64": "bun build src/index.tsx --compile --target=bun-linux-arm64 --minify --outfile=dist/troise-linux-arm64",
    "build:darwin-x64": "bun build src/index.tsx --compile --target=bun-darwin-x64 --minify --outfile=dist/troise-darwin-x64",
    "build:darwin-arm64": "bun build src/index.tsx --compile --target=bun-darwin-arm64 --minify --outfile=dist/troise-darwin-arm64",
    "build:windows-x64": "bun build src/index.tsx --compile --target=bun-windows-x64 --minify --outfile=dist/troise-windows-x64.exe",
    "build:all": "bun run build:linux-x64 && bun run build:linux-arm64 && bun run build:darwin-x64 && bun run build:darwin-arm64 && bun run build:windows-x64",
    "test": "bun test",
    "lint": "bunx @biomejs/biome check src/",
    "format": "bunx @biomejs/biome format --write src/"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-highlight": "^2.1.11",
    "commander": "^12.1.0",
    "conf": "^13.0.1",
    "date-fns": "^4.1.0",
    "glob": "^11.0.0",
    "ignore": "^6.0.2",
    "ink": "^5.0.1",
    "ink-link": "^4.1.0",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "marked": "^14.1.0",
    "marked-terminal": "^7.2.0",
    "mime-types": "^2.1.35",
    "node-notifier": "^10.0.1",
    "react": "^18.3.1",
    "react-devtools-core": "^7.0.1",
    "ws": "^8.18.0",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.3.12",
    "@types/ws": "^8.5.13",
    "@types/mime-types": "^2.1.4",
    "@types/node-notifier": "^8.0.5",
    "typescript": "^5.6.3",
    "@biomejs/biome": "^1.9.4"
  },
  "author": "trosfy",
  "license": "MIT",
  "keywords": [
    "cli",
    "tui",
    "terminal",
    "ai",
    "llm",
    "troise",
    "chat",
    "bun",
    "ink",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/trosfy/troise-tui"
  },
  "engines": {
    "bun": ">=1.1.0"
  }
}
